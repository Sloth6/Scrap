-var content = JSON.parse(element.content)
.card.website
  a(href=content.url, target='_blank')
    .card.text.title
      p!=content.title
    .card.img
      img(src=content.image)
    .card.text.description
      p!=content.description
    
  .background
  if element.caption == '' || element.caption == null
    .ui-resizable-handle.ui-resizable-se.ui-icon.ui-icon-grip-diagonal-se
if element.caption !== '' && element.caption !== null
  .card.text.caption
    p!=element.caption
    .background
    .ui-resizable-handle.ui-resizable-se.ui-icon.ui-icon-grip-diagonal-se